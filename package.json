{
  "name": "zkvote-demo",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:circom": "circom circuits/zkvote.circom --r1cs --wasm --sym -o build",
    "setup:groth16": "cd build && snarkjs groth16 setup zkvote.r1cs ../powersOfTau28_hez_final_22.ptau zkvote_0000.zkey && snarkjs zkey contribute zkvote_0000.zkey zkvote_final.zkey -e=\"zkvote-demo\" && snarkjs zkey export verificationkey zkvote_final.zkey verification_key.json",
    "ts-node": "ts-node",
    "build:tree": "node --loader ts-node/esm scripts/build_merkle_tree.ts",
    "prove": "node --loader ts-node/esm scripts/generate_vote_proof.ts",
    "verify": "node --loader ts-node/esm scripts/verify_vote_proof.ts",
    "demo:double-vote": "node --loader ts-node/esm scripts/demo_double_vote.ts"
  },
  "dependencies": {
    "circomlibjs": "^0.1.7",
    "ethers": "^6.11.1",
    "snarkjs": "^0.7.3"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
